<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="DiseaseBase">
        <defName>Ab16_Tranquilize</defName>
        <label>tranquilize</label>
		<description>A hediff used by the Tranquilizer</description>
        <labelNoun>an intense tranquilization</labelNoun>
        <lethalSeverity>1</lethalSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-2.2</severityPerDay>
            </li>
        </comps>
        <injuryProps>
            <destroyedLabel>Euthanized</destroyedLabel>
            <destroyedOutLabel>Euthanized</destroyedOutLabel>
        </injuryProps>
        <stages>
            <li>
                <minSeverity>0.1</minSeverity>
                <label>minor</label>
                <painFactor>.9</painFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.8</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.25</minSeverity>
                <label>moderate</label>
                <painFactor>.65</painFactor>
                <vomitMtbDays>0.01</vomitMtbDays>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.5</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.4</minSeverity>
                <label>severe</label>
                <painFactor>.05</painFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.25</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.60</minSeverity>
                <label>extreme</label>
                <painFactor>0</painFactor>
                <lifeThreatening>true</lifeThreatening>
                <deathMtbDays>5.2</deathMtbDays>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>1</minSeverity>
                <label>fatal</label>
                <painFactor>0</painFactor>
            </li>
        </stages>
    </HediffDef>
</Defs>