<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="DiseaseBase">
        <defName>NLW-Hediff_PepperSpray</defName>
        <label>pepper spray</label>
		<description>A blinding, painful juice in your eyes</description>
        <labelNoun>pepper spray</labelNoun>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>900~3000</disappearsAfterTicks>
            </li>
        </comps>
        <injuryProps>
            <canMerge>false</canMerge>
        </injuryProps>
        <stages>
            <li>
                <minSeverity>0.01</minSeverity>
                <label>minor</label>
				<becomeVisible>true</becomeVisible>
                <painOffset>.2</painOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.75</setMax>
                    </li>
                </capMods>
            </li>
			<li>
                <minSeverity>0.25</minSeverity>
                <label>moderate</label>
				<becomeVisible>true</becomeVisible>
                <painOffset>.4</painOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.50</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <setMax>0.75</setMax>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <setMax>0.75</setMax>
                    </li>
                </capMods>
            </li>
			<li>
                <minSeverity>0.5</minSeverity>
                <label>high</label>
				<becomeVisible>true</becomeVisible>
                <painOffset>.55</painOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.25</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <setMax>0.35</setMax>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <setMax>0.35</setMax>
                    </li>
                </capMods>
            </li>
			<li>
                <minSeverity>0.9</minSeverity>
                <label>severe</label>
				<becomeVisible>true</becomeVisible>
                <painOffset>.70</painOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.15</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <setMax>0.25</setMax>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <setMax>0.25</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>1.0</minSeverity>
                <label>extreme</label>
				<becomeVisible>true</becomeVisible>
                <painOffset>.85</painOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.1</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <setMax>0.2</setMax>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <setMax>0.2</setMax>
                    </li>
                </capMods>
            </li>
			<li>
                <minSeverity>1.15</minSeverity>
                <label>why me?</label>
				<becomeVisible>true</becomeVisible>
                <painOffset>1</painOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.01</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <setMax>0.15</setMax>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <setMax>0.15</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>